{
  "compilerOptions": {
    "strict": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/components/*": ["./_components/*"]
    },

    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",

    "skipLibCheck": true
  }
}
